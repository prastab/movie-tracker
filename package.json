{
  "name": "movie-tracker",
  "version": "1.0.0",
  "description": "Movie Tracker directory with server and frontend",
  "private": true,
  "workspaces": [
    "server",
    "frontend"
  ],
  "scripts": {
    "server": "cd server && nodemon index.js",
    "client": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "db-init": "cd server && node setup-db.js",
    "build": "cd frontend && npm run build && cp -R build ../server/public"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  }
}
